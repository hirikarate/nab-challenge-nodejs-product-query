	},
	"dependencies": {
		"@micro-fleet/cache": "2.4.0-rc1",
		"@micro-fleet/common": "2.4.0-rc4",
		"@micro-fleet/id-generator": "2.4.0-rc1",
		"@micro-fleet/microservice": "2.4.0-rc1",
		"@micro-fleet/persistence": "2.4.0-rc1",
		"@micro-fleet/service-communication": "2.4.0-rc2",
		"moment": "~2.24"
	}
}
